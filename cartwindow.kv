<CartWindow>:
    id: cart_window
    canvas.before:
        Color:
            rgba: (.92, .61, .14, 1)
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        id: item_field
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: .1
            canvas.before:
                Color:
                    rgba: (.59, .33, .17, 1)
                Rectangle:
                    size: self.size
                    pos: self.pos
            Label:
                text: 'Cart'
                font_size: 32
                font_name: 'trocchi'
            Button:
                text: 'Pay'
                size_hint_x: .3
        BoxLayout:
            size_hint_y: .1
            Label:
                text: 'Item'
                pos_hint: {'center_x': 0.25, 'center_y': .5}

            Label:
                text: 'Amount'
                pos_hint: {'center_x': .75, 'center_y': .5}
        GridLayout:
            size_hint_y: .8
<LuckyDraw>:
    size_hint: .5, .5
    title: 'LuckyDraw'
    BoxLayout:
        id: lucky_draw
